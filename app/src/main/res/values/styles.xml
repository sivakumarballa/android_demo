<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="AppTheme" >
        <item name="colorPrimary">@color/headerColor</item>
        <item name="colorPrimaryDark">@color/trayColor</item>
        <item name="colorAccent">@color/themeColor</item>
    </style>

    <style name="btn_dimens">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="btn_dimens.red">
        <item name="android:background">#FF0000</item>
    </style>

    <style name="btn_dimens.green">
        <item name="android:background">#00ff00</item>
    </style>

</resources>
